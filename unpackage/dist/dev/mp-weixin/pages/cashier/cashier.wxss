.container {
  padding: 0;
}
.container .box1 {
  height: 400rpx;
  text-align: center;
}
.container .box1 .price {
  padding-top: 150rpx;
  height: 100rpx;
  color: #d10910;
  line-height: 100rpx;
}
.container .box1 .price .rmb {
  font-size: 44rpx;
}
.container .box1 .price .count {
  font-size: 58rpx;
  font-weight: 600;
}
.container .box1 .time {
  font-size: 28rpx;
  line-height: 40rpx;
  /* identical to box height */
  text-align: center;
  color: #AEAEAE;
}
.container .box1 .time .time-count {
  margin-left: 8rpx;
}
.container .box2 {
  border-top: 1rpx solid #363636;
  overflow-y: scroll;
  height: 800rpx;
}
.container .box2 .empty-cell {
  height: 240rpx;
}
.container .box2 .box2-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #363636;
}
.container .box2 .box2-item .icon {
  width: 54rpx;
  height: 54rpx;
}
.container .box2 .box2-item .text {
  flex: 1;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.container .box2 .box2-item .radio {
  position: relative;
  width: 44rpx;
  height: 44rpx;
}
.container .box2 .box2-item .radio .nocheck {
  width: 40rpx;
  height: 40rpx;
  border-radius: 22rpx;
  border: 2rpx solid #363636;
}
.container .box2 .box2-item .radio .checked {
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 44rpx;
  height: 44rpx;
}
.container .box3 {
  position: fixed;
  bottom: 140rpx;
  left: 0;
  width: 100%;
  text-align: center;
}
.container .box3 .submit {
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 0;
  margin: auto;
  background: #D10910;
  border-radius: 48px;
  height: 96rpx;
  width: 474rpx;
  font-weight: 500;
  font-size: 32rpx;
}
.container .box3 .submit:active {
  background-color: rgba(209, 9, 16, 0.6);
  color: #868686;
}

